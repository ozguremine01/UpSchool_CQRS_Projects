@model List<GetProductStoragerQueryResult>
@{
    ViewData["Title"] = "StoragerIndex";
}

<h1>StoragerIndex</h1>

<div class="container">
    <h2>Muhasebeci Paneli</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Depo</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.Storage</td>
                <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="#" class="btn btn-outline-primary">Yeni Kayıt Girişi</a>

</div>